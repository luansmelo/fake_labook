{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strict": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ]
}
